#!/usr/bin/env bash
if [[ $# -lt 2 ]]; then
  echo "  Usage: forpar <cfg-name> <cmd> ..."
  exit 1
fi
hosts=
if [[ -r "${HOME}/.forall/${1}" ]]; then
  hosts=$(cat "${HOME}/.forall/${1}")
elif [[ -r "/etc/forall/${1}" ]]; then
  hosts=$(cat "/etc/forall/${1}")
fi
[[ -z $hosts ]] && exit 1
for h in $hosts; do
  (ssh "$h" "${@:2}") &>/tmp/forpar.$h.log &
done
