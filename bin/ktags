#!/bin/bash
# .ki_path .ki_ids .ki_wl_{arch,drivers}
tignore="/tmp/.${USER}.kip"
cp ${HOME}/.ki_path ${tignore}
for sub in arch drivers; do
  wf="${HOME}/.ki_wl_${sub}"
  whites=
  if [[ -f ${wf} ]]; then
    whites=$(cat ${wf})
  fi
  all=$(ls -d ${sub}/*/)
  found=
  for a in ${all[@]}; do
    d=${a%/}
    found=
    for w in ${whites[@]}; do
      if [[ ${d} == ${w} ]]; then
        found="found"
        echo "white-listing ${d}"
        break
      fi
    done
    if [[ -z ${found} ]]; then
      echo ${d} >> ${tignore}
    fi
  done
done
ctags -I "@${HOME}/.ki_ids" --exclude="@${tignore}" -R .
rm -f ${tignore}
