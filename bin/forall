#!/bin/bash
if [[ $# -lt 2 ]]; then
  echo "  Usage: forall <cfg-name> <cmd> ..."
  return 1
fi
local hosts=
if [[ -r "${HOME}/.forall/${1}" ]]; then
  hosts=$(cat "${HOME}/.forall/${1}")
elif [[ -r "/etc/forall/${1}" ]]; then
  hosts=$(cat "/etc/forall/${1}")
fi
[[ -z $hosts ]] && return 1
for h in $hosts; do
  echo "== $h =="
  ssh "$h" "${@:2}"
done
