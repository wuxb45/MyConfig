#!/bin/bash
if [[ $# -lt 3 ]]; then
  echo "  Usage: pdfcut <pdf-in> <pdf-out> <first-page> [<last-page>]"
  return 0
fi
local head="gs -sDEVICE=pdfwrite -dNOPAUSE -dBATCH -dSAFER"
local p0="-dFirstPage=${3}"
local pn=
if [[ -n ${4} ]]; then
  pn="-dLastPage=${4}"
fi
$head $p0 $pn -sOutputFile="${2}" "${1}"
